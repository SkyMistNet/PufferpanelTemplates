{
  "name": "Pocketmine",
  "display": "Pocketmine",
  "type": "minecraft-bedrock",
  "install": [
    {
      "commands": [
        "curl -sL https://get.pmmp.io -o installer.sh"
      ],
      "type": "command"
    },
    {
      "commands": [
        "chmod +x installer.sh"
      ],
      "type": "command"
    },
    {
      "commands": [
        "./installer.sh"
      ],
      "type": "command"
    },
    {
      "commands": [
        "rm installer.sh"
      ],
      "type": "command"
    }
  ],
  "run": {
    "stop": "stop",
    "command": "./start.sh --no-wizard",
    "workingDirectory": "",
    "pre": [],
    "post": [],
    "environmentVars": {}
  },
  "data": {},
  "environment": {
    "type": "tty"
  },
  "supportedEnvironments": [
    {
      "type": "tty"
    }
  ],
  "requirements": {}
}
